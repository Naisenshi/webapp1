<!DOCTYPE html>
<html>
    <head>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
          <body style="background-color: #d8bfaa;">
            <%- include('./partials/navbar.ejs') %>
            
            <!-- timezone -->
          <br>
            <center>
                <img src="../assets/<%=flag%>" style="width: 20%; border-radius: 10%;"></li>
                <h1><%=date%></h1>
                <h1><%=time%></h1>
            </center>

            <!-- table -->
            <form method="GET" action="/newperson">
                <div class="container w-50 h-20" style="margin-top: 50px;">
                    <div class="row">
                    <div class="col-12">
                        <button type="sumbit" style="margin-bottom: 8px; border-color: white; font-family: serif; border-radius: 50%;">Add</button>
        
                        <table class="table table-borderless table-transparent text-white">
                        <thead style="background-color: #381d2a;">  
                            <tr>
                            <th scope="col">ID#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Birthdate</th>
                            <th scope="col">Nationality</th>
                            <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% var id = 1; %>
                           <% for (p of person) { %> 
                                <tr>
                                    <td><%=id%></td>
                                    <td><%=p["fullname"]%></td>
                                    <td><%=p["birthdate"]%></td>
                                    <td><%=p["nationality"]%></td>
                                    <td><a href="/viewperson/<%= p._id %>" type="button" class="btn btn-secondary" style="border-radius: 50%;">View</a></td>
                                </tr>
                            <% id++;
                        }%>  
                        </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </form>
                    
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
            <script>
            document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.sidenav');
            var instances = M.Sidenav.init(elems);
            });
            </script> 
    </body>
</html>